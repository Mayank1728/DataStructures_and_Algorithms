class Solution {
  public int maxAreaOfIsland(int[][] grid) {
    int count = 0;
    for (int i = 0; i < grid.length; i++) {
      for (int j = 0; j < grid[0].length; j++) {
        if (grid[i][j] == 1) {
          count = Math.max(count, findArea(grid, i, j, grid.length, grid[0].length));
          System.out.println(count + " " + i + " " + j);
        }
      }
    }
    return count;
  }

  private int findArea(int[][] grid, int i, int j, int m, int n) {
    if (i < 0 || i >= m || j < 0 || j >= n || grid[i][j] == 0) {
      return 0;
    }
    grid[i][j] = 0;
    return 1 + findArea(grid, i - 1, j, m, n) + findArea(grid, i, j - 1, m, n) + findArea(grid, i + 1, j, m, n) + findArea(grid, i, j + 1, m, n);

  }
}
