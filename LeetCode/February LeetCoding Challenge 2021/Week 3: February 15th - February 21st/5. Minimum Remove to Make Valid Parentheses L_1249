class Solution {
    public String minRemoveToMakeValid(String s) {
        StringBuilder sb = new StringBuilder(s);
        int open = 0, close = 0;
        for (int i = 0; i < sb.length(); i++) {
            if (sb.charAt(i) == '(') {
                open++;
            } else if (sb.charAt(i) == ')') {
                if (open <= 0) {
                    sb = new StringBuilder((sb.substring(0, i)) + (sb.substring(i + 1)));
                    i--;
                } else {
                    open--;
                }
            }
        }
        
        open = 0;
        close = 0;

        for (int i = sb.length() - 1; i >= 0; i--) {
            if (sb.charAt(i) == ')') {
                close++;
            } else if (sb.charAt(i) == '(') {
                if (close <= 0) {
                    sb = new StringBuilder((sb.substring(0, i)) + (i != s.length() + 1 ? (sb.substring(i + 1)) : ""));
                } else {
                    close--;
                }
            }
        }
        return sb.toString();
    }
}
