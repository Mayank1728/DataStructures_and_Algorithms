class Solution {
    public List < Integer > killProcess(List < Integer > pid, List < Integer > ppid, int kill) {
        HashMap < Integer, ArrayList < Integer >> map = new HashMap < > ();
        for (int i = 0; i < pid.size(); i++) {
            ArrayList < Integer > li = map.getOrDefault(ppid.get(i), new ArrayList < Integer > ());
            li.add(pid.get(i));
            map.put(ppid.get(i), li);
        }
        ArrayList < Integer > res = new ArrayList < > ();
        getAllChildren(map, res, kill);
        return res;
    }

    public void getAllChildren(HashMap < Integer, ArrayList < Integer >> map, ArrayList < Integer > res, int kill) {
        res.add(kill);
        if (!map.containsKey(kill))
            return;
        ArrayList < Integer > li = map.get(kill);
        for (int i: li) {
            getAllChildren(map, res, i);
        }
    }
}
